@model IEnumerable<WSPlus.DATA.Models.Empresa>

@{
    ViewData["Title"] = "Empresa";
}

<h1>Empresa</h1>

<p>
    <a class="btn btn-outline-success " asp-action="Create">Nova Empresa</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFantasia)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFantasia)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
           
            <td>
               <a asp-action="Edit" class="btn btn-outline-success " asp-route-id="@item.Id">Alterar</a> 
               <a asp-action="Details" class="btn btn-outline-primary " asp-route-id="@item.Id">Detalhes</a> 
               <a asp-action="Delete" class="btn btn-outline-danger " asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
